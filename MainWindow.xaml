<Window x:Class="DialogEngine.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DialogEngine"
             mc:Ignorable="d" 
             d:DesignHeight="451.32" d:DesignWidth="602.639" Title="DialogEngine" >
    <Window.Resources>
        <Style x:Key="MultiLineTB" TargetType="TextBox">
            <Setter Property="Text" Value="{Binding Text, ElementName=tbMaster}"/>
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,2,39">
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="183*"/>
            <RowDefinition Height="46*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="157*"/>
            <ColumnDefinition Width="360*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="PlayButton" Content="Start" HorizontalAlignment="Left" Margin="0,63,0,-41.333" VerticalAlignment="Top" Width="282" Height="41" Grid.ColumnSpan="2" MouseDoubleClick ="PlayButton_MouseDoubleClick" Grid.Row="2"/>
        <TextBox x:Name="TestOutput" HorizontalAlignment="Left" Height="310" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="584" Grid.ColumnSpan="2" Margin="0,10,0,0" Grid.RowSpan="2" 
                 ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Style="{StaticResource MultiLineTB}" AcceptsReturn="True" local:TextBoxUtilities.AlwaysScrollToEnd="True"/>
        <TextBox x:Name="TestInput" HorizontalAlignment="Left" Height="63" Margin="0,0,0,-0.333" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="594" Grid.ColumnSpan="2" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
         ScrollViewer.CanContentScroll="True" />
        <Button x:Name="InputButton" Content="Retrieve" HorizontalAlignment="Left" Margin="106.333,63,0,-41.333" VerticalAlignment="Top" Width="307" Height="41" MouseDoubleClick ="PlayButton_MouseDoubleClick" Grid.Row="2" Grid.Column="1" Click="InputButton_Click"/>

    </Grid>
</Window>
