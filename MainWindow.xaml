<Window x:Class="DialogEngine.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DialogEngine"
             WindowStartupLocation="CenterScreen"
             mc:Ignorable="d" 
             d:DesignHeight="451.32" Title="DialogEngine" Width="639.305">
    
    <Window.Resources>
        <Style x:Key="MultiLineTB" TargetType="TextBox">
            <Setter Property="Text" Value="{Binding Text, ElementName=tbMaster}"/>
        </Style>
    </Window.Resources>
    
   
    <Grid x:Name="mainGrid">

        <DockPanel Margin="0,5,0,0">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Dialog">
                </MenuItem>

                <MenuItem Header="_MP3Player">
                </MenuItem>
                
            </Menu>
        </DockPanel>


        <Frame x:Name="mainFrame"
               NavigationUIVisibility="Hidden"
               Margin="0,25,0,0"
               >
            
            <Frame.Background>
                LightGray
            </Frame.Background>
        </Frame>
        
        
    </Grid>
</Window>
