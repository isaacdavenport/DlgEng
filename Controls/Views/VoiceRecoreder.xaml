                       Margin="10,0,0,0"
                       FontSize="16"
                       Text="{Binding TimerText}" />-->

            <!--<ProgressBar Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="10" />-->
        </Grid>
        

