            <Canvas.Resources>

                <LinearGradientBrush x:Key="waveBrush" MappingMode="Absolute"   StartPoint="350,0" EndPoint="350,150">
                    <GradientStop Color="Blue" Offset="0.15" />
                    <GradientStop Color="Red" Offset="0.7" />
                    <GradientStop Color="Yellow" Offset="0.00" />
                </LinearGradientBrush>
                
            </Canvas.Resources>

            <Canvas.CacheMode>
                <BitmapCache EnableClearType="False" 
